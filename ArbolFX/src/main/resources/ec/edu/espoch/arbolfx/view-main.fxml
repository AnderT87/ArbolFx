<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?> 

<BorderPane prefHeight="500.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ec.edu.espoch.arbolfx.controller.ArbolController">

    <!-- ================== TOP ================== -->
    <top>
        <VBox alignment="CENTER" spacing="15"
              style="-fx-padding: 20; -fx-background-color: #F5F7FA;">

            <!-- TÍTULO -->
            <Label text="Árbol Binario de Búsqueda"
                   style="-fx-font-size: 22px; -fx-font-weight: bold;" />

            <!-- CONTROLES -->
            <HBox alignment="CENTER" spacing="10">

                <TextField fx:id="txtValor"
                           prefWidth="140"
                           promptText="Ingrese valor" />

                <Button text="INSERTAR"
                        onAction="#insertar"
                        style="-fx-background-color: #2D64E0; -fx-text-fill: white;" />

                <Button text="ELIMINAR"
                        onAction="#eliminar"
                        style="-fx-background-color: #D9534F; -fx-text-fill: white;" />

                <Button text="BUSCAR"
                        onAction="#buscar"
                        style="-fx-background-color: #5CB85C; -fx-text-fill: white;" />

                <Button text="ACTUALIZAR"
                        onAction="#actualizarVista" />

            </HBox>

            <!-- ESTADO -->
            <HBox alignment="CENTER" spacing="5">
                <Label text="Estado:" style="-fx-font-weight: bold;" />
                <Label fx:id="lblEstado" text="---" />
            </HBox>

        </VBox>
    </top>

    <!-- ================== CENTER ================== -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <content>
                <StackPane fx:id="canvasHolder"
                           prefHeight="400.0"
                           prefWidth="780.0"
                           style="-fx-background-color: white;
                                  -fx-border-color: #CCCCCC;" />
            </content>
        </ScrollPane>
    </center>

</BorderPane>
